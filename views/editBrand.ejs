<%- include("partials/head.ejs") %>
<%- include("partials/header.ejs", { csrfToken: csrfToken }) %>

<h2 class="form-title">Your Brand</h2>
<form class="brand-form" method="POST" action="<%= brand && brand._id ? '/brands/update/' + brand._id : '/brands' %>">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <input type="hidden" name="_method" value="POST">

  <label for="name">Brand Name</label>
  <input type="text" name="name" value="<%= brand ? brand.name : '' %>" required>

  <label for="category">Category</label>
  <select name="category" required>
    <option value="Clothing" <%= brand && brand.category === 'Clothing' ? 'selected' : '' %>>Clothing</option>
    <option value="Shoes" <%= brand && brand.category === 'Shoes' ? 'selected' : '' %>>Shoes</option>
    <option value="Accessories" <%= brand && brand.category === 'Accessories' ? 'selected' : '' %>>Accessories</option>
    <option value="Tableware" <%= brand && brand.category === 'Tableware' ? 'selected' : '' %>>Tableware</option>
    <option value="Other" <%= brand && brand.category === 'Other' ? 'selected' : '' %>>Other</option>
  </select>

  <label for="description">Description</label>
  <textarea name="description" required><%= brand ? brand.description : '' %></textarea>

  <label for="website">Website</label>
  <input type="url" name="website" value="<%= brand ? brand.website : '' %>" required>

  <label for="criteria" class="criteria-label">Criteria</label>
<div class="criteria-group">
    <label class="checkbox-label">
        <input type="hidden" name="ecoFriendly" value="false">
        <input type="checkbox" name="ecoFriendly" value="true" <%= brand && brand.ecoFriendly ? 'checked' : '' %> />
        🌱 Eco-Friendly
    </label>

    <label class="checkbox-label">
        <input type="hidden" name="nonToxic" value="false">
        <input type="checkbox" name="nonToxic" value="true" <%= brand && brand.nonToxic ? 'checked' : '' %> />
        🚫 Non-Toxic
    </label>

    <label class="checkbox-label">
        <input type="hidden" name="plasticFree" value="false">
        <input type="checkbox" name="plasticFree" value="true" <%= brand && brand.plasticFree ? 'checked' : '' %> />
        ♻️ Plastic-Free
    </label>

    <label class="checkbox-label">
        <input type="hidden" name="veganCrueltyFree" value="false">
        <input type="checkbox" name="veganCrueltyFree" value="true" <%= brand && brand.veganCrueltyFree ? 'checked' : '' %> />
        🐰 Vegan & Cruelty-Free
    </label>
</div>

  <button type="submit" class="btn submit-btn"><%= brand && brand._id ? 'Update' : 'Add' %> Brand</button>
</form>

<%- include("partials/footer.ejs") %>